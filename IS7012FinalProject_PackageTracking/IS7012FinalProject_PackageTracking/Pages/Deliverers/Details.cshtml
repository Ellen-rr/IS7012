@page
@model IS7012FinalProject_PackageTracking.Pages.Deliverers.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Deliverer</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-10">
            @Html.DisplayNameFor(model => model.Deliverer.DelivererCode)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Deliverer.DelivererCode)
        </dd>
        <dt class="col-sm-10">
            @Html.DisplayNameFor(model => model.Deliverer.DelivererName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Deliverer.DelivererName)
        </dd>
        <dt class="col-sm-10">
            @Html.DisplayNameFor(model => model.Deliverer.DateDelivered)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Deliverer.DateDelivered)
        </dd>
        <dt class="col-sm-10">
            @Html.DisplayNameFor(model => model.Deliverer.DeliveryStatus)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Deliverer.DeliveryStatus)
        </dd>
    </dl>
</div>
<div>
    <h4>Packages List</h4>
    @if (Model.Deliverer.Packages.Count() == 0)
        {
            <div class="alert alert-warning">
                    <p>There are no package in his hand.</p>
                </div>
        }
            else
            {
                <table class="table table-dark">
                    <thead>
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.Deliverer.Packages[0].PackageName)</th>
                            <th>@Html.DisplayNameFor(model => model.Deliverer.Packages[0].PackageWeight)</th>
                            @*<th>@Html.DisplayNameFor(model => model.Deliverer.Packages[0].User.FullName)</th>
                            <th>@Html.DisplayNameFor(model => model.Deliverer.Packages[0].User.FullAddress)</th>*@
                            <th>@Html.DisplayNameFor(model => model.Deliverer.Packages[0].Deliverer.DateDelivered)</th>
                            <th>@Html.DisplayNameFor(model => model.Deliverer.Packages[0].Deliverer.DeliveryStatus)</th>
                        </tr>
                    </thead>
                    @foreach (var item in Model.Deliverer.Packages)
                    {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.PackageName)</td>
                    <td>@Html.DisplayFor(modelItem => item.PackageWeight)</td>
                    @*<td>@Html.DisplayFor(modelItem => item.User.FullName)</td>
                    <td>@Html.DisplayFor(modelItem => item.User.FullAddress)</td>*@
                    <td>@Html.DisplayFor(modelItem => item.Deliverer.DateDelivered)</td>

                    <td>
                        @if (item.Deliverer.DeliveryStatus)
                        {
                        <div>
                            <img class="align-content-center" src="/pics/Received.gif" alt="cardimage" width="50" height="50">
                        </div>
                        }
                        else
                        {
                    <div>
                        <span class="badge badge-secondary">On the Way</span>
                    </div>
                        }
                    </td>
                </tr>
                    }
                </table>
            }

        </div>

    <div>
        <a asp-page="./Edit" asp-route-id="@Model.Deliverer.DelivererId">Edit</a> |
        <a asp-page="./Index">Back to List</a>
    </div>
