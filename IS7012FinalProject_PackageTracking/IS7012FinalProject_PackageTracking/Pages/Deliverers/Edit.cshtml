@page
@model IS7012FinalProject_PackageTracking.Pages.Deliverers.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Deliverer</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Deliverer.DelivererId" />
            <div class="form-group">
                <label asp-for="Deliverer.DelivererCode" class="control-label"></label>
                <input asp-for="Deliverer.DelivererCode" class="form-control" />
                <span asp-validation-for="Deliverer.DelivererCode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Deliverer.DelivererName" class="control-label"></label>
                <input asp-for="Deliverer.DelivererName" class="form-control" />
                <span asp-validation-for="Deliverer.DelivererName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Deliverer.DateDelivered" class="control-label"></label>
                <input asp-for="Deliverer.DateDelivered" class="form-control" />
                <span asp-validation-for="Deliverer.DateDelivered" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Deliverer.DeliveryStatus" /> @Html.DisplayNameFor(model => model.Deliverer.DeliveryStatus)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
