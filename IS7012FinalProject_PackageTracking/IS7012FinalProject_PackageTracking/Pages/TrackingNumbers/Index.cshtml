@page
@model IS7012FinalProject_PackageTracking.Pages.TrackingNumbers.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TrackingNumber[0].User)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TrackingNumber[0].Package)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TrackingNumber[0].Deliverer)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TrackingNumber[0].trackingNumber)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.TrackingNumber) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.User.FullName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Package.PackageName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Deliverer.DelivererName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.trackingNumber)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.TrackingNumberId">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.TrackingNumberId">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.TrackingNumberId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
