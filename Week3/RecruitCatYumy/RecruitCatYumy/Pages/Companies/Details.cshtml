@page
@model RecruitCatYumy.Pages.Companies.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Companies Details</h1>

<div>
   
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Company.CompanyName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Company.CompanyName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Company.PositionName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Company.PositionName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Company.MinimumSalary)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Company.MinimumSalary)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Company.MaximumSalary)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Company.MaximumSalary)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Company.StartDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Company.StartDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Company.Industry)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Company.Industry.IndustryId)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Company.Location)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Company.Location)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Company.Income)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Company.Income)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Company.NumberOfEmployee)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Company.NumberOfEmployee)
        </dd>
    </dl>
</div>






<div>
    <table class="table table-bordered">
        <thead>

            <tr>

                <th>Employee FirstName</th>
                <th>Employee Last Name</th>
                <th>Employee Salary</th>

            </tr>
        </thead>
        <tbody>
            @foreach(var emp in Model.Company.Candidates)
            {
            <tr>
                <td>@Html.DisplayFor(modelItem => emp.FirstName)</td>
                <td>@Html.DisplayFor(modelItem => emp.LastName)</td>
                <td>@Html.DisplayFor(modelItem => emp.TargetSalary)</td>

            </tr>
            }


            

        </tbody>
    </table>

</div>
  
    


<div>
    <a asp-page="./Edit" asp-route-id="@Model.Company.CompanyId">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
